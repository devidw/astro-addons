{
  "compilerOptions": {
    "strict": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "declaration": true,
    "declarationMap": true,
    // https://stackoverflow.com/a/57079925/13765033
    "skipLibCheck": true,
    "rootDir": "src",
    "outDir": "dist",
  },
  "include": [
    "src"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}