---
import { getAdoc } from "../dist/index.js"
import type { Asciidoctor } from "asciidoctor"

interface Props {
  path: string
  options?: Asciidoctor.ProcessorOptions
}

const { path, options } = Astro.props as Props

const html = getAdoc(path, options).convert()
---

<Fragment set:html={html} />
